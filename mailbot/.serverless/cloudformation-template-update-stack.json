                  "Resource": [
                    {
                      "Fn::GetAtt": [
                        "SinteseDynamoDBTable",
                        "Arn"
                      ]
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "s3:PutObject"
