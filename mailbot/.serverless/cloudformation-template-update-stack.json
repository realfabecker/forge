    "SinteseS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": "sintese"
      }
    },
    "SinteseDynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "sintese",
        "AttributeDefinitions": [
          {
            "AttributeName": "PK",
            "AttributeType": "S"
          },
          {
            "AttributeName": "SK",
            "AttributeType": "S"
          },
          {
            "AttributeName": "GSI1_PK",
            "AttributeType": "S"
          },
          {
            "AttributeName": "GSI1_SK",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "PK",
            "KeyType": "HASH"
          },
