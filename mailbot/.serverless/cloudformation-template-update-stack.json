        "EventSourceArn": {
          "Fn::GetAtt": [
            "MailbotSQSQueue",
            "Arn"
          ]
        },
        "FunctionName": {
          "Fn::GetAtt": [
            "MailbotDashsqsDashconsumerLambdaFunction",
            "Arn"
          ]
        },
        "Enabled": true
